<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/description_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/margin_xx_small"
        android:paddingLeft="@dimen/margin_xx_small"
        android:paddingRight="@dimen/margin_xx_small"
        android:paddingStart="@dimen/margin_xx_small">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="@color/color_black"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transl"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toBottomOf="@+id/tv_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_transcription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transcr"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_translation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.bartex.utils.network.ui.EquilateralImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonSound"
            app:layout_constraintTop_toBottomOf="@+id/tv_transcription"
            tools:srcCompat="@tools:sample/avatars" />

    <VideoView
            android:id="@+id/videoView_sound"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonSound"/>

    <Button
            android:id="@+id/buttonSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="?colorPrimary"
            android:padding="8dp"
            android:text="@string/pronons"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>