<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/color_black"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transl"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_margin="16dp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toBottomOf="@+id/tv_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_transcription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transcr"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_translation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_transcription"
            tools:srcCompat="@tools:sample/avatars" />

    <VideoView
            android:id="@+id/videoView_sound"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />
    <Button
            android:id="@+id/buttonSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pronons"
            android:backgroundTint="?colorPrimary"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:textColor="@color/color_white"
            app:layout_constraintTop_toTopOf="@+id/videoView_sound"
            app:layout_constraintBottom_toBottomOf="@id/videoView_sound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>